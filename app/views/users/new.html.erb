<h1>Signup!</h1>

<%= form_for :user, :class => "form-horizontal", url: '/users' do |f| %>
  <div class="form-group">
    <label for="name" class="control-label col-sm-2">Name:</label>
    <div class="col-sm-10"> 
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="email" class="control-label col-sm-2">Email:</label>
    <div class="col-sm-10"> 
      <%= f.text_field :email, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="user_number" class="control-label col-sm-2">Phone Number:</label>
    <div class="col-sm-10"> 
      <%= f.text_field :user_number, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="friend_number" class="control-label col-sm-2">Friend's Number:</label>
    <div class="col-sm-10"> 
      <%= f.text_field :friend_number, :class => "form-control" %>
    </div>
  </div>


  <div class="form-group">
    <label for="name" class="control-label col-sm-2">Password:</label>
    <div class="col-sm-10"> 
      <%= f.password_field :password, :class => "form-control" %>
    </div>
  </div>

    <div class="form-group">
    <label for="name" class="control-label col-sm-2">Password Confirmation:</label>
    <div class="col-sm-10"> 
      <%= f.password_field :password_confirmation, :class => "form-control" %>
    </div>
  </div>

  <br><br><br><br>
  <br><br><br><br>
  <br><br><br><br>

    <%= f.submit "Submit", :class => "btn btn-success btn-large " %>

<% end %>